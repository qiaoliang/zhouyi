# 周易通APP - 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# API 配置
VITE_API_BASE_URL=https://api.zhouyi.example.com
VITE_API_TIMEOUT=30000

# 微信小程序配置
MINI_PROGRAM_APP_ID=your_wechat_appid
MINI_PROGRAM_APP_SECRET=your_wechat_app_secret

# 微信开放平台配置 (APP登录)
WECHAT_APP_ID=your_wechat_open_appid
WECHAT_APP_SECRET=your_wechat_open_app_secret

# 支付配置
WECHAT_PAY_MCH_ID=your_mch_id
WECHAT_PAY_API_KEY=your_api_key
WECHAT_PAY_CERT_PATH=./certs/wechat_pay_cert.p12
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key

# 短信服务配置
SMS_ACCESS_KEY=your_sms_access_key
SMS_SECRET_KEY=your_sms_secret_key
SMS_SIGN_NAME=周易通
SMS_TEMPLATE_CODE=your_template_code

# 推送服务配置
JPUSH_APP_KEY=your_jpush_app_key
JPUSH_MASTER_SECRET=your_jpush_master_secret

# 云存储配置
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET=zhouyi-app
OSS_REGION=oss-cn-hangzhou

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/zhouyi
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zhouyi
DB_USER=zhouyi_user
DB_PASSWORD=zhouyi_password

# 日志配置
LOG_LEVEL=info
LOG_OUTPUT=console

# 功能开关
ENABLE_MOCK=false
ENABLE_DEBUG=true
ENABLE_ANALYTICS=true

# 其他配置
APP_NAME=周易通
APP_VERSION=1.0.0
DEFAULT_LOCALE=zh-CN
