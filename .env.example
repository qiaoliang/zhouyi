# ============================================
# API Keys (Required to enable respective provider)
# ============================================
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional, for Groq models.
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional, for OpenRouter models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...

# ============================================
# MongoDB Database Configuration
# ============================================
MONGODB_URI="mongodb://localhost:27017/zhouyi"        # MongoDB connection URI
MONGODB_DB_NAME="zhouyi"                              # Database name
MONGO_MAX_POOL_SIZE="10"                              # Max connection pool size
MONGO_MIN_POOL_SIZE="2"                               # Min connection pool size
MONGO_SERVER_SELECTION_TIMEOUT="5000"                 # Server selection timeout (ms)
MONGO_SOCKET_TIMEOUT="45000"                          # Socket timeout (ms)
MONGO_HEARTBEAT_FREQUENCY="10000"                     # Heartbeat frequency (ms)

# ============================================
# Application Configuration
# ============================================
NODE_ENV="development"                                # Environment: development, production, test
PORT="3000"                                           # Application port
API_PREFIX="api/v1"                                   # API prefix

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET="your_jwt_secret_here_change_in_production"  # JWT secret key
JWT_EXPIRES_IN="15m"                                  # Access token expiry
JWT_REFRESH_EXPIRES_IN="7d"                           # Refresh token expiry

# ============================================
# WeChat Configuration
# ============================================
# 微信开放平台APP配置（用于APP端微信登录）
WECHAT_APP_APPID="your_wechat_app_appid"              # 微信开放平台APP AppID
WECHAT_APP_APPSECRET="your_wechat_app_appsecret"      # 微信开放平台APP AppSecret

# 微信小程序配置（用于小程序端微信登录）
WECHAT_MINI_PROGRAM_APPID="your_wechat_mini_appid"    # 微信小程序AppID
WECHAT_MINI_PROGRAM_APPSECRET="your_wechat_mini_appsecret"  # 微信小程序AppSecret

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST="localhost"                                # Redis host
REDIS_PORT="6379"                                     # Redis port
REDIS_PASSWORD=""                                     # Redis password (empty if no password)
REDIS_DB="0"                                          # Redis database number

# ============================================
# Verification Code Configuration
# ============================================
CODE_LENGTH="6"              # 验证码长度
CODE_EXPIRES_IN="300"        # 验证码有效期（秒）
CODE_SEND_INTERVAL="60"      # 发送间隔（秒）
CODE_MAX_ATTEMPTS="5"        # 最大尝试次数
CODE_LOCKOUT_TIME="3600"     # 锁定时间（秒）

# ============================================
# SMS Configuration
# ============================================
SMS_MODE="mock"              # 短信服务模式: mock（开发）, aliyun（生产）
# SMS_ACCESS_KEY_ID="your_aliyun_access_key_id"           # 阿里云AccessKey ID (生产环境)
# SMS_ACCESS_KEY_SECRET="your_aliyun_access_key_secret"   # 阿里云AccessKey Secret (生产环境)
# SMS_SIGN_NAME="周易通"                                   # 短信签名 (生产环境)
# SMS_TEMPLATE_CODE="SMS_123456789"                       # 短信模板代码 (生产环境)

# ============================================
# Database Refresh Configuration
# ============================================
ZHOUYI_DB_REFRESH="false"    # 是否在启动时刷新数据库: true（删除并重建）, false（使用现有数据库）
# 注意: 设置为 true 会删除所有数据并重新初始化，请谨慎使用